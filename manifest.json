{
  "manifest_version": 2,
  "name": "Revisionista",
  "description" : "Revisionista Browser Extension",
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "revisionist_extension.png"
  },
  "background": {
    "scripts": [
      "vendor/browser-polyfill.min.js",
      "vendor/executeScript-helper.js",
      "vendor/fetch-retry-browserified.js",
      "vendor/tldjs-browserified.js",
      "vendor/Readability.js",
      "background_scripts/background.js"
    ]
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "css": [
      "content_scripts/main.css"
    ],
    "js": [
      "vendor/browser-polyfill.min.js",
      "vendor/Readability-readerable.js",
      "content_scripts/content.js"
    ]
  }],
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com/*; object-src 'self';"
}
